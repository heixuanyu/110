<!-- 个人资料部分 -->
<view class="personalData">
  <view class="material">个人资料</view>
  <view class="personalMessage">
    <view class="msgList">
      <text class="avatar">我的头像</text>
      <view class="picBox" wx:if="{{imgPath}}" bindtap="previewImg">
        <image src="{{imgPath}}" class="picture"/>
      </view>
      <view class="imgBox" bindtap="pictureUpload">
        <i class="iconfont icon-open iconStyle"></i>
      </view>
    </view>
    <view class="msgList">
      <view class="avatar">我的姓名</view>
      <input placeholder="请填写姓名" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
    <view class="msgList">
      <text class="avatar">执业编号</text>
      <text class="inputText">LA1024RS</text>
    </view>
    <view class="msgList">
      <view class="avatar">我的职位</view>
      <input placeholder="请填写职位" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
    <view class="msgList">
      <view class="avatar">手机号码</view>
      <input placeholder="请填写手机号码" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
    <view class="msgList">
      <view class="avatar">微信号码 </view>
      <input placeholder="请填写微信号" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
  </view>
</view>
<!-- 关于我 -->
<view class="aboutMe">
  <view class="aboutBox">
    <text class="materialRight materialLeft">  
    关于我
    </text>
    <text class="materialRight">
      0/200
    </text>
  </view>
  <view class="textareaBox">
    <textarea placeholder="请填写个人简介" maxlength="{{200}}" auto-focus="{{true}}" show-confirm-bar="{{true}}" adjust-position="{{true}}" placeholder-class="textStyle" class="contentBox"/>
  </view>
</view>
<!-- 工作经历 -->
<view class="aboutMe">
  <view class="aboutBox">
    <text class="materialRight materialLeft">  
    工作经历
    </text>
    <text class="materialRight addExperience">
      添加工作经历
    </text>
  </view>
  <view class="personalMessage workBox">
    <view class="msgList">
      <view class="avatar">就职公司</view>
      <input placeholder="请填写" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
     <view class="msgList">
      <view class="avatar">就职时间</view>
      <input placeholder="请填写" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
     <view class="msgList">
      <view class="avatar">就职职位</view>
      <input placeholder="请填写" placeholder-class="placeholderText"
      class="inputText"
      />
    </view>
  </view>
</view>
<!-- 底部保存按钮 -->
<view class="saveBtn">保存</view>