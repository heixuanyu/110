page {
  background: #1F243A;
}
.headBox {
  height:760rpx;
  background-image: url(https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=3610725648,3410317786&fm=26&gp=0.jpg);
  margin:48rpx 36rpx 0 36rpx;
  border-radius: 16rpx;
  box-shadow: 0pt 1pt 20pt 0pt rgba(0,0,0,0.1);
}
.rightBox {
  float: right;
}
.iconBox {
  color:#FFFFFF;
  width:56rpx;
  height:56rpx;
  margin-top: 32rpx;
  margin-right: 32rpx;
  text-align: center;
  background: rgba(30,35,57,0.7);
  border-radius: 50%;
}
.bottomBox {
  padding-top: 434rpx;
}
.contentBox {
  background: linear-gradient(rgba(30,38,62,0), rgba(30,38,62,0.61) 49%, #1e263e);
  height:328rpx;
}
.nameBox {
  padding-top: 80rpx;
  margin-left: 36rpx;
}
.name {
  color:#FFFFFF;
  font-weight: 600;
  font-size: 40rpx;
}
.icon-jf-play {
  color:#FFFFFF;
  margin-left: 16rpx;
}
.jobNum {
  color:#FFFFFF;
  margin-left: 36rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-top: 12rpx;
  font-weight: 400;
}
.connectBox {
  display: flex;
  align-items: center;
  color:#fff;
  margin-left: 4rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.contact {
  display: flex;
  align-items: center;
  margin-left: 32rpx;
}
/* 点赞部分 */
.goodBox {
  margin-top: 32rpx;
  margin-left: 36rpx;
  margin:32rpx 36rpx 0 36rpx;
  display: flex;
  align-items: center;
}
.avatar {
  width: 56rpx;
  height:56rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.ellipsis {
  flex: 1;
}
.ellipsisIcon {
  background: linear-gradient(#e1e7ff, #2e418d);
  width: 26rpx;
  height: 6rpx;
}
.goodRight {
  display: flex;
  color: #fff;
  align-items: center;
}
.goodNum {
  font-size: 24rpx;
  line-height: 34rpx;
  font-weight: 400;
  color: #d5e3ef;
}
.iconGood {
  width:56rpx;
  height:56rpx;
  background: #E4D2A7;
  color:#9C6925;
  text-align: center;
  border-radius: 50%;
  line-height: 56rpx;
  margin-left: 24rpx;
}
/* 关于我行 */
.aboutMe {
  margin-top: 32rpx;
  background: #fff;
  margin-left: 36rpx;
  margin-right: 36rpx;
  border-radius: 20rpx;
}
.triangle {
  width:0;
  height:0;
  border-bottom:20rpx solid transparent;border-left:20rpx solid #2E418D;
  border-top:20rpx solid transparent;
  border-right:20rpx solid transparent;
}
.titleBox {
  display: flex;
  color:#2E418D;
  padding-top: 30rpx;
  align-items: center;
}
.aboutMeText {
  font-size: 24rpx;
  line-height: 34rpx;
}
.lineBox {
  height: 1rpx;
  border: 1rpx solid #d9d9d9;
  margin-top: 16rpx;
}
.insuranceText {
  font-size: 24rpx;
  line-height: 34rpx;
  color:#626262;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.customerDetail {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height:70rpx;
}
.companyBox {
  font-size: 24rpx;
  color:#2E418D;
}
.verticalLine {
  width: 4rpx;
  height: 36rpx;
  border: 1rpx solid #d9d9d9;
}
.productBox {
  background: #fff;
  margin-top: 50rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
}
.productLineBox {
  display: flex;
  align-items: center;
}
.goodProduct {
  display: flex;
  align-items: center;
}
.fireBox {
  width: 52rpx;
  height: 52rpx;
  background: #eeeeee;
  border-radius: 50%;
  color:#B89A6B;
  text-align: center;
}
.goodProduct {
  font-size: 36rpx;
  line-height: 50rpx;
  color:#111111;
  flex: 1;
}
.getMore {
  display: flex;
  align-items: center;
  color:#808080;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.moreText {
  margin-right: 8rpx;
}
.productDetail {
  display: flex;
  border-bottom: 2rpx solid #D9D9D9;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}
.goodProduct {
  border-bottom: 0;
}
.imgBox {
  display: inline-block;
  position: relative;
}
.picStyle {
  width:176rpx;
  height:176rpx;
  border-radius: 20rpx;
}
.insurance {
  position: absolute;
  left: 0;
  bottom: 0;
  width:100%;
  height: 56rpx;
  text-align: center;
  background-color: #B89A6B;
  border-radius: 0 0 20rpx 20rpx;
  color: #ffffff;
  line-height: 56rpx;
  font-size: 28rpx;
}
.productRight {
  margin-left: 32rpx;
}
.planBox {
  font-size: 36rpx;
  font-weight: 400;
  color: #111111;
}
.ageBox {
  color:#808080;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}
/* 轮播图部分 */
.swiperBox {
  margin-top: 34rpx;
}
.swiperPic {
  width:600rpx;
  height: 256rpx;
  border-radius: 20rpx 20rpx 0 0;
}
/* 底部授权部分 */
.explication {
  font-size: 20rpx;
  color: #D9D9D9;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 70rpx;
}
.horizontalLine {
  width: 60pt;
  height: 1pt;
  border: 0.5rpx solid #d9d9d9;
}
.allRight {
  margin-left: 20rpx;
  margin-right: 20rpx;
}


