        </view>
    </view>
    <!-- 按钮start -->
    <view class="lian_value">
        <button type="submit" class="lian_value_sub">打回</button>
        <button type="submit" class="lian_value_sub">通过</button>
    </view>
    <!-- 按钮end -->
</view>