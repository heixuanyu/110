<view id="memberCheck" class="memberCheck">
    <!-- 个人简介start -->
    <view class="mR_preson">
        <view class="mR_preson_img">img</view>
        <view class="mR_person_contain">
            <view class="mR_person_contain_name">
                <text>刘嘉玲</text>
                <text>销售经理</text>
            </view>
            <view class="mR_person_job">执业编号： LA010ABC</view>
        </view>
    </view>
    <!-- 个人简介end -->
    <!-- form  start -->
    <view class="mR_form">
        <form action="#">
            <view class="section lian_form_input">
                <!-- <view class="lian_form_input_add"> -->
                <view class="section__title lian_form_input_key">隶属公司</view>
                <!-- </view> -->
                <input name="input" value="利安人寿营业部" class="lian_form_input_value" />
            </view>
            <view class="section lian_form_input">
                <view class="section__title lian_form_input_key">手机号码</view>
                <input name="input" value="18854545456" class="lian_form_input_value" />
            </view>
            <view class="section lian_form_input">
                <view class="sectiontitle lian_form_input_key">性别</view>
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <view class="picker lian_form_input_value">{{array[index]}}</view>
                </picker>
            </view>
        </form>
    </view>
    <!-- form end -->
    <!-- 每月工作量部分 -->
    <view class="mR_worker">
        <view class="mR_preson_worker">
            <view class="mR_worker_tit">icon 当月业绩</view>
            <view class="underwrite">
                <view>个人承保费保费（元）</view>
                <view>50000000</view>
            </view>
            <view class="underwrite">
                <view>个人承保费件数（件）</view>
