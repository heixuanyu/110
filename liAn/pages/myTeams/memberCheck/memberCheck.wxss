/* 按钮部分 */

.lian_value {
    position: fixed;
    display: flex;
    bottom: 0;
    right: 0;
    left: 0;
    text-align: center;
}

.lian_value button {
    border-radius: 0;
    margin: 0;
}

.lian_value>button:first-child {
    background: #808080;
    font-size: 36rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #ffffff;
    width: 50%;
}

.lian_value>button:nth-child(2) {
    background: #2E418D;
    font-size: 36rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #ffffff;
    width: 50%;
}

.lian_value_sub {}


/* 工作量部分 */

.mR_worker {
    width: 690rpx;
    box-sizing: border-box;
    background-color: #fff;
    margin: 0 auto;
    border-top: 6rpx solid #2e418d;
    margin-top: 32rpx;
    padding-bottom: 18rpx;
}

.mR_preson_worker {
    width: 630rpx;
    /* background-color: yellow; */
    margin: 0 auto;
}

.mR_worker_tit {
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #2e418d;
    line-height: 40rpx;
    padding-top: 16rpx;
    padding-bottom: 8rpx;
}

.underwrite {
    padding-top: 24rpx;
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #808080;
    line-height: 40rpx;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.underwrite>view:first-child {}

.underwrite>view:nth-child(2) {
    color: #D02445;
}