}

.swiper-tab {
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    position: fixed;
    top: 0;
    z-index: 2;
    background-color: #ffffff;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 50%;
    color: #777;
}

.on {
    color: #2e418d;
    /* box-sizing: content-box; */
    border-bottom: 5rpx solid #2e418d;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}


