/* pages/channelInformation/channelInformation.wxss */

page {
    background: #F2F2F0;
}

.channelInformationBtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
}

.channelInformationBtn>button {
    font-size: 36rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    line-height: 98rpx;
    height: 98rpx;
    border-radius: 0;
}

.channelInformationBtn01 {
    width: 30%;
    box-sizing: content-box;
    border-right: 1rpx solid #d9d9d9;
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #808080;
    background-color: #ffffff;
    line-height: 40rpx;
    border-radius: 0;
}

.channelInformationBtn02 {
    box-sizing: content-box;
    width: 30%;
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #808080;
    background-color: #ffffff;
    line-height: 40rpx;
    border-radius: 0;
}

.channelInformationBtn03 {
    box-sizing: content-box;
    width: 40%;
    font-size: 36rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #ffffff;
    background: #2e418d;
    border-radius: 0;
    line-height: 50rpx;
}

.channelInformationDialog {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #000000;
    z-index: 10;
    background: rgba(0, 0, 0, 0.5);
    box-sizing: content-box;
}

.channelInformationDialogBox {
    width: 562rpx;
    height: 450rpx;
    background-color: #fff;
    z-index: 100;
    margin: 0 auto;
    position: relative;
    top: 50%;
    /*偏移*/
    transform: translateY(-50%);
}

.channelInformationDialogBoxBtn {
    display: flex;
    flex-wrap: nowrap;
    box-sizing: contain-box;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}

.channelInformationDialogBoxBtn>button {
    width: 50%;
    border-top: 1rpx solid #d9d9d9;
    border-radius: 0;
    height: 102rpx;
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #626262;
    line-height: 102rpx;
}

.channelInformationDialogBoxBtn>button:first-child {
    color: #359EFF
}

.channelInformationDialogBoxBtn>button::after {
    border: none;
    border-radius: 0;
}

.channelInformationDialogBoxBtn>button:nth-child(2) {
    border-left: 1rpx solid #d9d9d9;
}

.channelInformationDialogBoxContain>view:first-child {
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #626262;
    line-height: 40rpx;
    padding-left: 52rpx;
    padding-top: 48rpx;
    padding-bottom: 16rpx;
}

.channelInformationDialogBoxContain>view:nth-child(2) {
    font-size: 24rpx;
    font-family: PingFangSC, PingFangSC-Regular;
