.headTitle {
  font-size: 40rpx;
  line-height: 68rpx;
  color:#111111;
  margin-left: 36rpx;
  margin-right: 36rpx;
  margin-top: 32rpx;
}
.shareText {
  font-size: 24rpx;
  line-height: 48rpx;
  color:#808080;
  font-weight: 400;
  margin-left: 36rpx;
}
/* 信息卡片部分 */
.messageBox {
  padding:32rpx;
  display: flex;
  margin:32rpx 36rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}
.messageLeft {
  margin-right: 32rpx;
}
.avatar {
  width:136rpx;
  height: 136rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx 0 #d9d9d9; 
}
.messageRight {
  width:100%;
}
.nameBox {
  display: flex;
  align-items: center;
}
.nameLine {
  display: flex;
  align-items: center;
  flex:1;
}
.nameText {
  font-size: 32rpx;
  line-height: 44rpx;
  color:#626262;
}
.workName {
  margin-left: 40rpx;
  background: #E4D2A7;
  font-size: 24rpx;
  font-weight: 300;
  line-height: 34rpx;
  color:#fff;
  padding:6rpx 8rpx;
}
.iconBox {
  width:52rpx;
  height:52rpx;
  background: #E4D2A7;
  border-radius: 50%;
  text-align: center;
}
.iconStyle {
  color:#9C6925;
}
.detailBox {
  font-size: 24rpx;
  line-height: 34rpx;
  color:#626262;
  font-weight: 300;
  margin-top: 16rpx;
}
/* 文章后端返回文本部分 */
.contentText {
  margin-left: 36rpx;
  margin-right: 36rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color:#808080;
  font-weight: 400;
}
.legal {
  display: inline-block;
  color:#626262;
  background: #E4D2A7;
  margin-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.calculation {
  margin-top: 30rpx;
}
.btnStyle {
  background: #2e418d;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 400;
  width:50%; 
  height: 98rpx;
}
.btnBox {
  position: fixed;
  left:0;
  bottom:40rpx;
  width:100%;
}



