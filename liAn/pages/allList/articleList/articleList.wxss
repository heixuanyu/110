.nav_tab{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
 
}
.show{
  line-height:40rpx;
  text-align:center;
  flex:1;
  color:#808080;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:40rpx;
  text-align:center;
  color:#2E418D;
  flex:1;
  font-size:28rpx;
}
.nav_underline{
  background:#2E418D;
  width:68rpx;
  height:6rpx;
  margin:0 auto;
  border-radius: 4rpx;
  margin-top: 18rpx;
}
.tab_view{
  width:100%;
}
/* 保险列表部分 */
.safeList {
  margin-left: 36rpx;
  margin-right: 36rpx;
  display: flex;
  align-items: flex-start;
  padding-bottom: 34rpx;
  padding-top: 34rpx;
  border-bottom: 2rpx solid #D9D9D9;
}
.safeLeft {
  margin-right: 32rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
}
.safeContent {
  font-size: 32rpx;
  line-height: 48rpx;
}
.contentText {
  font-size: 32rpx;
  line-height: 48rpx;
  color:#111111;
}
.bottomBox {
  margin-top: 16rpx;
  display: flex;
  font-size: 24rpx;
}
.textLeft {
  color:#808080;
  flex:1;
}
.textRight {
  color:#BB3C26;
}
