.submitBox {
  margin-top: 160rpx;
  text-align: center;
}
.iconStyle {
  color: #2E418D;
  font-size: 174rpx;
}
.submitMsg {
  color:#626262;
  font-size: 40rpx;
  font-weight: 600;
  margin-top: 38rpx;
  line-height: 56rpx;
}
.msgText {
  margin-top: 40rpx;
  width:75%;
  margin:0 auto;
  margin-top: 40rpx;
  color:#626262;
  font-size: 28rpx;
  line-height: 40rpx;
}

/* 信息卡片部分 */
.messageBox {
  padding:32rpx;
  display: flex;
  margin:32rpx 36rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}
.messageLeft {
  margin-right: 32rpx;
}
.avatar {
  width:136rpx;
  height: 136rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx 0 #d9d9d9; 
}
.messageRight {
  width:100%;
}
.nameBox {
  display: flex;
  align-items: center;
}
.nameLine {
  display: flex;
  align-items: center;
  flex:1;
}
.nameText {
  font-size: 32rpx;
  line-height: 44rpx;
  color:#626262;
}
.workName {
  margin-left: 40rpx;
  background: #E4D2A7;
  font-size: 24rpx;
  font-weight: 300;
  line-height: 34rpx;
  color:#fff;
  padding:6rpx 8rpx;
}
.iconBox {
  width:52rpx;
  height:52rpx;
  background: #E4D2A7;
  border-radius: 50%;
  text-align: center;
}
.detailBox {
  font-size: 24rpx;
  line-height: 34rpx;
  color:#626262;
  font-weight: 300;
  margin-top: 16rpx;
}
.returnBtn {
  color:#808080;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 32rpx;
}