/* pages/component/selectProductInput/selectProductInput.wxss */

@import"../../../app.wxss";
.select-product-input {
    /* background-color: hotpink; */
    height: 108rpx;
    width: 678rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
}

.select-product-input .select-product-input-icon {
    background-color: #fff;
    width: 72rpx;
    height: 68rpx;
    position: relative;
}

.select-product-input-icon>.select-product-input-icon-i {
    position: absolute;
    display: block;
    width: 32rpx;
    height: 32rpx;
    top: 50%;
    /* background-color: lightseagreen; */
    transform: translateY(-50%);
    left: 16rpx;
}

.select-product-input .select-product-input-contain {
    background-color: #fff;
    flex: 1;
    height: 68rpx;
}

.select-product-input .select-product-input-contain>input {
    line-height: 68rpx;
    height: 68rpx;
}