    color: #111111;
    line-height: 48rpx;
    padding-top: 46rpx;
}

.selectProductTabPart>.selectProductTabPartMain .selectProductTabPartMainMiddle {
    font-size: 24rpx;
    font-family: PingFangSC, PingFangSC-Regular;
