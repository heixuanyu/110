/* radio end */

.fillPlanMessageFoot {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    height: 100rpx;
    align-items: center;
}

.fillPlanMessageFoot>.fillPlanMessageFootBtn>button {
    width: 220rpx;
    height: 72rpx;
    background: #e55024;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #ffffff;
    line-height: 72rpx;
}

.fillPlanMessageFootmoney {
    padding-left: 32rpx;
    font-size: 24rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #808080;
    line-height: 34rpx;
}

.fillPlanMessageFootmoney>text {
    font-size: 36rpx;
    font-family: PingFangSC, PingFangSC-Medium;
    font-weight: 500;
    text-align: left;
    color: #e55024;
    line-height: 50rpx;
    padding-left: 32rpx;
    padding-right: 10rpx;
}

.fillPlanMessageFootBtn {
    padding-right: 24rpx;
}

/* 选择picker地址 */
.insured-information-input-picker {
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #626262;
    line-height: 40rpx;
}